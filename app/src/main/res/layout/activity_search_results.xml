<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResults">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="500dp"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:padding="@dimen/appbar_padding"
        android:text="@string/search_results"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <TableLayout
        android:id="@+id/table_search_result"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_marginTop="1dp"
        android:elevation="5dp"
        android:fadeScrollbars="true"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:layoutMode="opticalBounds"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/book_title"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/author"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/category"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isbn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/isbn"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Bharat Bhushan Agarwal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isbn1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="0-5571-8671-4"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/view_book1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="@string/view"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Foundations of Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Ashfaque Ahmed"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isbn2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="0-6666-8671-4"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/view_book2"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="@string/view"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Introduction to Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Ronald J. Leach"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isbn3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="1-3467-1245-7"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/view_book3"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="@string/view"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Beginning Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author4"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Rod Stephens "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category4"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Software Engineering"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isbn4"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="0-9834-9434-1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/view_book4"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="@string/view"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>

    <ListView
        android:id="@+id/list_books"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_search_result" />

</androidx.constraintlayout.widget.ConstraintLayout>