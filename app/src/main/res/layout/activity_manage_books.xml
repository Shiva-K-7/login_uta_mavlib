<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageBooks">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:padding="@dimen/appbar_padding"
        android:text="@string/manage_books"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_books"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:clickable="true"

        android:elevation="5dp"
        android:text="@string/add_books"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:visibility="visible" />

    <Button
        android:id="@+id/remove_books"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:clickable="true"

        android:elevation="5dp"
        android:text="@string/remove_books"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/add_books"
        tools:layout_editor_absoluteX="-28dp"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>