        android:icon="@mipmap/ic_launcher_uta"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_uta_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ReserveController"
            android:parentActivityName=".SearchController" />
